{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": { "@/*": ["./common/*"] }
    },
    "include": [
        "vitest.config.ts",
        "common/**/**.test.ts",
        "common/**/**.spec.ts",
        "common/**/**.ts",
        "solutions/**/**.test.ts",
        "solutions/**/**.spec.ts",
        "solutions/**/**.ts"
    ],
    "exclude": ["node_modules", "scripts", "plopfile.mjs"]
}
